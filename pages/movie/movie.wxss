/* pages/movie/movie.wxss */

/*设置类样式需在类名前加英文点*/

.container {
  background-color: #f2f2f2;
}

.swiper_box {
  width: 100%;
  height: 100px;
}

.swiper_box image {
  width: 100%;
  height: 120px;
  display: inline-block;
  /*溢出隐藏*/
  overflow: hidden;
}

/*  2. 正在上映样式*/

view .text {
  width: 100%;
  padding: 10px 12px 10px 10px;
  color: #656565;
}

/**/

.lineflag {
  width: 3px;
  height: 10px;
  background-color: #09bb07;
  /*行内块，拥有行级元素特性的块级元素
    行级元素：不会自动换行
    块级元素：单独占一行
  */
  display: inline-block;
}

/*正在上映字体样式*/

view .text text {
  margin-left: 10px;
  line-height: 18px;
}

/*3.电影信息样式*/

.item {
  width: 100%;
  background-color: #fff;
  color: #787878;
  /*边框：粗细 实线 颜色*/
  border-top: 1px solid #eaeaea;
  border-bottom: 1px solid #eaeaea;
  padding: 10px;
  /*弹性布局，可为盒装布局提供最大的灵活性*/
  display: flex;
  /*
    水平显示（从左到右）（默认）：flex-direction: row;
    水平反向（从右到左）：flex-direction: row-reverse;
    垂直显示（从上到下）：flex-direction:column;
    垂直反向（从下到上）：flex-direction:column-reverse;
  */
}

/*电影海报*/

.item image {
  width: 65px;
  height: 95px;
  /*设置为block块级元素，成为块级元素后才可使用margin属性*/
  display: block;
  margin-left: 10px;
}

/*电影信息*/

.item-middle {
  flex: 1;
  width: 250px;
  height: 95px;
  display: block;
  /*margin是盒子的外边距，即盒子与盒子之间的距离，而padding是内边距，是盒子的边与盒子内部元素的距离*/
  margin-left: 10px;
  padding-top: 5px;
  overflow: hidden;
}

/*电影名*/

.item-middle .title {
  font-size: 16px;
  color: #222;
}

/*简介*/

.item-middle .sub_title {
  font-size: 12px;
  color: #666;
  margin: 2px 0px;
}

/*演员*/

.item-middle .actor {
  font-size: 12px;
  color: #666;
  margin: 2px 0px;
}
/*评分*/

.item-right .score {
  font-size: 12px;
  color: #cf616a;
  margin-right: 10px;
}

/*购票方式*/

.item-right .action {
  display: inline-block;
  margin-top: 5px;
  border: 1px solid #29cc6d;
  /*边框圆角度*/
  border-radius: 10px;
  color: #29cc6d;
  padding: 2px 4px;
  font-size: 12px;
  line-height: 16px;
  text-align: center;
}
